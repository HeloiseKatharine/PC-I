#include <stdio.h>
#include <string.h>
#include<stdlib.h>

int main()
{

    FILE *fp;
    char verifique;
    int linhas=0;
    int linhas_2=0;
    char aux;
    int i=0;
    char usuario[5] = "3.1:";
    char mensagem[100];

    fp = fopen("conversa.txt","r+");//leitura e escrita do arquivo

    if(fp == NULL)
    {
              fprintf(fp, "%s", usuario);
        printf("Digite uma mensagem:\n");
        scanf("%[^\n]s", mensagem);
        fprintf(fp, "%s", mensagem);
        fprintf(fp, "%c", '\n');

    }

    else
    {
        while(fscanf(fp, "%c", &aux) != EOF)
        {
            if(aux == '\n')
            {
                linhas++;//quantidade de linhas
            }
            i++;
        }
    }

    char *texto = malloc((i+1)*sizeof(char)); //alocando a memoria

    rewind(fp);//voltar para o inicio

    i=0;

    while(fscanf(fp, "%c", &aux) != EOF)
    {
        texto[i] = aux;
        i++;
    }

    texto[i] = '\n';



    int tamanho = 0;
    tamanho = strlen(texto);

    linhas = linhas-1;

    for(i=0; i<tamanho; i++)
    {
        if(texto[i] == '\n')
        {
            linhas_2++;
        }
        if(linhas == linhas_2)
        {
            verifique = texto[i+3];
            break;
        }
    }

    if(verifique == '1')
    {
        printf("Espere o seu amigo responder sua ultima mensagem!!");
    }

    if(verifique == '2')
    {
        fprintf(fp, "%s", usuario);
        printf("Digite uma mensagem:\n");
        scanf("%[^\n]s", mensagem);
        fprintf(fp, "%s", mensagem);
        fprintf(fp, "%c", '\n');
    }


    fclose(fp);
    return 0;
}
